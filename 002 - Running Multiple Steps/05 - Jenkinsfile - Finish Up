pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
        stage('build') {
            steps {
                sh "exit \$((RANDOM % 2))"
            }
        }
    }
    post {
    	sucess {
		echo 'Sucess'
	}
	failure {
		echo 'Failure'
	}
	always {
		echo 'Always'
	}
	}
}
